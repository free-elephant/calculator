<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/javascripts/javasc.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <script type="text/javascript">



        $(document).on("click",'.minus', function(value){
            var old_minus=$("#answer").val();
            if(old_minus==""){
                old_minus=0
            }
            $("#answer").val(old_minus + $('.minus').val());
            // $('#equals').attr('onclick','');
        });

        $(document).on("click",'.multiply', function(value){
            var old_multiply=$("#answer").val();
            if(old_multiply==""){
                alert("곱셈으로 시작할 수 없습니다.")
            }
            $("#answer").val(old_multiply + $('.multiply').val());
            // $('#equals').attr('onclick','');
        });

        $(document).on("click",'.bracket', function(value){
            var old_bracket=$("#answer").val();
            if(old_bracket=""){
                old_bracket=0
            }
            $("#answer").val(old_bracket + $('.multiply').val());
            // $('#equals').attr('onclick','');
        });

        $(document).on("click",'.equals', function(value) {
            var a = $('#answer').val();
            $('#answer').val(eval(a));

        });

        $(document).on("click",'.init', function(value) {
            $('#answer').val() = '';

        });

    </script>
</head>
<body>
<p>함수 설명</p>
<p>수식 입력</p>
<input type="text" id="answer" value="" style="width:98%; height:35px;"/>
<button class="cal"  id="plus" value="+" >+</button>
<button class="cal"  id="minus" value="-">-</button>
<button class="cal" id="multiply"  value="*">*</button>
<button class="init"  value="c">Clear</button>
<button class="cal" id="div" value="/">/</button>
<button class="cal" id="bracket_f"  value=".">(</button>
<button class="cal" id="bracket_b" value=".">)</button>
<button class="equals"  value="=">=</button>



</body>
</html>





